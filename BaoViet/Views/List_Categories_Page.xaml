<Page
    x:Class="BaoViet.Views.List_Categories_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BaoViet.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" NavigationCacheMode="Required"
    DataContext="{Binding ListCategories,
                            Mode=OneWay,
                            Source={StaticResource Locator}}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:Name="Category_ListView"  SelectionMode="None" ItemsSource="{Binding CurrentPaper.Categories}"  ItemContainerStyle="{StaticResource ListViewItemExpanded}" IsItemClickEnabled="True"  ItemClick="Category_ListView_ItemClick"  ScrollViewer.VerticalScrollBarVisibility="Hidden" ItemTemplate="{StaticResource CategoryTemplate}">
        </ListView>
    </Grid>
</Page>
